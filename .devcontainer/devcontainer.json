{
  "name": "mgq-admin",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bookworm",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "forwardPorts": [5173, 3000],
  "portsAttributes": {
    "3000": { "label": "web" },
    "5173": { "label": "vite" }
  },
  "postCreateCommand": "corepack enable && (pnpm -v >/dev/null 2>&1 && pnpm install || npm install)"
}
